{
    // 有关 tasks.json 格式的文档，请参见
    // https://go.microsoft.com/fwlink/?LinkId=733558
    "version": "2.0.0",
    "tasks": [{
        "type": "shell",
        "label": "g++",
        "command": "g++",
        "args": [
            "-g",
            "\"${file}\"",
            "-o",
            "\"${fileDirname}\\${fileBasenameNoExtension}.exe\"",
            "-Wall",
            "-Wshadow"
        ],
        "problemMatcher": {
            "owner": "cpp",
            "fileLocation": [
                "relative",
                "${workspaceRoot}"
            ],
            "pattern": {
                "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                "file": 1,
                "line": 2,
                "column": 3,
                "severity": 4,
                "message": 5
            }
        },
        "group": {
            "kind": "build",
            "isDefault": true
        }
    }, ]
}